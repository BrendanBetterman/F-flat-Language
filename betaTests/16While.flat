//  Simple while loops.

BOF
	int n, k;

	foutln( "Enter a positive integer upper limit for counting: ");
	fin( n);
	fout("\n");
	k = 1;
	foutln( "Forward: ");
	while (k <= n)
		foutln( k);
		k = k + 1;
	endwhile

	foutln( "\n");
	k = n;
	foutln( "Backward: ");
	while (k >= 1)
		foutln( k);
		k = k - 1;
	endwhile
	fout( "\n");
	
EOF
